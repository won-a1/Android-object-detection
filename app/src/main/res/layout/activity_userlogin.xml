<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/mainCoordinatedLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Userlogin"
    android:background="#fff"
    android:padding="18dp" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginTop="28dp"
        android:background="#fff">



        <TextView
            android:id="@+id/iWelcomeText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Hello !  "
            android:textSize="45sp"
            android:fontFamily="cursive"
            android:textColor="@color/colorAccent"
            android:layout_marginTop="8dp"

            />

        <TextView
            android:id="@+id/iSuggestion"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Sign in to  Continue "
            android:textSize="20sp"
            android:fontFamily="cursive"
            android:textStyle="bold"
            android:layout_marginTop="8dp"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:layout_marginBottom="20dp"
            android:orientation="vertical">

            <com.google.android.material.textfield.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="17dp">


                <EditText
                    android:id="@+id/iEmail"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint=" Email"
                    android:inputType="textEmailAddress"

                    />

            </com.google.android.material.textfield.TextInputLayout>


            <com.google.android.material.textfield.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                app:passwordToggleEnabled="true">

                <EditText
                    android:id="@+id/iPassword"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint=" Password"
                    android:inputType="textPassword"
                    />

            </com.google.android.material.textfield.TextInputLayout>



            <Button
                android:id="@+id/iSignIn"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="25dp"
                android:background="@drawable/button_template"
                android:text="Sign In"
                android:textColor="#fff"
                android:textSize="18sp"
                />


            <TextView
                android:id="@+id/iSignUp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="40dp"
                android:gravity="center_horizontal"
                android:text="New User ? Create an Account "
                android:textColor="@color/colorAccent"
                android:background="@drawable/custom_border"
                android:textAlignment="center"
                android:textSize="15sp"
                android:textStyle="bold" />


        </LinearLayout>

    </LinearLayout>

</ScrollView>